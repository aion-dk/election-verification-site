{
  "name": "dbas-client",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "test:unit:ci": "vitest --environment jsdom --root src/ --passWithNoTests --reporter dot --reporter junit --outputFile test-results/vitest.xml",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ci": "playwright test --output test-results/artifacts",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "prettier:ci": "npx prettier -c ./",
    "prettier": "npx prettier -w ./",
    "lint": "eslint ./src/**/* --fix",
    "lint:ci": "eslint ./src/**/*"
  },
  "dependencies": {
    "@aion-dk/js-client": "^4.4.0",
    "@assemblyvoting/ui-library": "^3.5.1",
    "axios": "^1.8.2",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.1",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "pdf-lib": "^1.17.1",
    "pinia": "^2.3.1",
    "sass": "^1.59.3",
    "sinon": "^15.2.0",
    "vite": "^5.4.15",
    "vue": "^3.5.13",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.5.0",
    "vue-tsc": "^2.1.6"
  },
  "devDependencies": {
    "@pinia/testing": "^0.1.7",
    "@playwright/test": "^1.49.1",
    "@rushstack/eslint-patch": "^1.10.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/eslint-plugin": "^1.1.25",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.15.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "prettier": "^3.4.2",
    "typescript": "^5.4.5",
    "vitest": "^3.0.2"
  },
  "engines": {
    "node": ">=22.13.0",
    "npm": ">=10.9.2"
  },
  "vite": {
    "optimizeDeps": {
      "include": [
        "axios"
      ]
    }
  }
}
